<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:color">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <style name="homeTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">@dimen/five_dp</item>
        <item name="android:shadowDx">1.0000000000000002</item>
        <item name="android:shadowDy">1.7320508075688772</item>
        <item name="android:layout_marginTop">@dimen/five_dp</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>
